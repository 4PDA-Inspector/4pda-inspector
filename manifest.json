{
	"name": "4PDA Инспектор",
	"version": "3.4",
	"version_name": "3.4 BETA 3",
	"description": "Мониторинг изменений на форуме 4pda",
	"homepage_url": "http://4pdainspector.coddism.com",

	"manifest_version": 2,

	"icons": {
		"128":"icons/icon_128.png",
		"48": "icons/icon_48.png",
		"16": "icons/icon_16.png"
	},

	"permissions": [
		"tabs",
		"cookies",
		"https://4pda.ru/*",
		"https://4pda.to/*",
		"notifications",
		"storage"
	],

	"browser_action": {
		"default_title": "4PDA Инспектор",
		"default_icon": "icons/icon_19.png",
		"default_popup": "html/popup.html"
	},
	"options_ui": {
		"chrome_style": true,
		"open_in_tab": true,
		"page": "html/options.html"
	},
	"background": {
		"scripts" : [
			"/js2/u/utils.js",
			"/js2/u/browser.js",
			"/js2/u/notifications.js",
			"/js2/u/xhr.js",
			"/js2/vars.js",

			"/js2/e/user.js",
			"/js2/e/favorites.js",
			"/js2/e/qms.js",
			"/js2/e/mentions.js",

			"/js2/cs.js"
		]
	}
}
